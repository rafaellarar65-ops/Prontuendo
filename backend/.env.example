# App
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Security
JWT_ACCESS_SECRET=change-me-to-a-secure-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change-me-to-another-secure-secret
JWT_REFRESH_EXPIRES_IN=7d

# Database / Prisma
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prontuendo?schema=public

# Redis / BullMQ
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS
CORS_ORIGIN=http://localhost:5173

# Email (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@prontuendo.com.br

# Multitenancy
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001
