# App
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Security
JWT_ACCESS_SECRET=change_me
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change_me_too
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=endocrinopront-pro
JWT_AUDIENCE=endocrinopront-pro-users
TOTP_ISSUER=EndocrinoProntPro

# Database / Prisma
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/endocrinopront
DIRECT_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/endocrinopront
PRISMA_LOG_LEVEL=info

# Redis / BullMQ
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
BULLMQ_PREFIX=endocrinopront

# AI Providers (backend only)
GEMINI_API_KEY=
CLAUDE_API_KEY=
AI_RATE_LIMIT_PER_MINUTE=10
AI_CACHE_TTL_SECONDS=120

# File storage
STORAGE_DRIVER=local
STORAGE_BUCKET=
STORAGE_REGION=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_ENDPOINT=

# Email
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@endocrinopront.com.br

# Digital signature (ICP-Brasil)
INTEGRAICP_BASE_URL=
INTEGRAICP_API_KEY=
BRY_BASE_URL=
BRY_CLIENT_ID=
BRY_CLIENT_SECRET=
TIMESTAMP_AUTHORITY_URL=

# PDF engine
PUPPETEER_EXECUTABLE_PATH=
PDF_DEFAULT_FORMAT=A4

# Multitenancy / Feature flags
DEFAULT_TENANT_ID=demo-tenant
FEATURE_AI_CONSENSUS=true
FEATURE_PATIENT_PORTAL=true
